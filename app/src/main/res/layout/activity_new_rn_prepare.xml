<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alllayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rn_prepare_background"
        />

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Title"
            android:textColor="@color/text_black"
            android:textSize="20dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/backicon"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_doc_back" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/centerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">

        <ImageView
            android:id="@+id/loadfailed"
            android:layout_width="200dp"
            android:layout_height="156dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_no_data"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loadfailed_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loadfailed"
            android:layout_centerHorizontal="true"
            android:text="请检查网络状态后刷新重试"
            android:textColor="#FF6F778F"
            android:textSize="14sp"
            android:visibility="gone" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/gif1"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            app:indicatorColor="@color/default_gray6"
            app:indicatorName="BallPulseIndicator"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centerlayout"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/infotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="infotext"
            android:textColor="@color/default_gray6"
            android:textSize="12dp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/refresh"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_fbfbfb_corner_19_news"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击刷新"
                android:textColor="#FF6F778F"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
