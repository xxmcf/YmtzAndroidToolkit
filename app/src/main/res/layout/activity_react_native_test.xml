<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReactNativeTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <com.example.demo.utils.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_view"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/rn_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:minHeight="35dp"
                android:hint="RN小程序唯一标识code"
                android:text="HelloRN"
                android:maxLines="1"
                android:background="@drawable/bg_chat_edittext">

            </EditText>

            <EditText
                android:id="@+id/server_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:minHeight="35dp"
                android:hint="RN服务IP和端口(10.168.161.45:8081)"
                android:text="10.168.161.45:8081"
                android:maxLines="1"
                android:background="@drawable/bg_chat_edittext">

            </EditText>

            <Button
                android:id="@+id/open_rn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/shape_session_btn_send"
                android:text="打开"
                android:textColor="@color/white"
                android:textSize="13sp">

            </Button>

            <Button
                android:id="@+id/btn_test"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/shape_session_btn_send"
                android:text="测试"
                android:textColor="@color/white"
                android:textSize="13sp">

            </Button>

        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>